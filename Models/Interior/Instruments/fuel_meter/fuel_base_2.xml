<!-- Fuel meter 
3D instrument for Tu-134 -->
<PropertyList>
 <path>fuel_meter.ac</path>

<!-- Animations -->
  <animation>
    <object-name>base</object-name>
    <object-name>knob</object-name>
    <object-name>needle</object-name>
    <object-name>glass</object-name>
  </animation>

  <effect>
    <inherits-from>Aircraft/Tu-134-JSB/Models/Effects/glass/glass</inherits-from>
    <object-name>glass</object-name>
  </effect>

  <!-- Internal instruments lighting -->
  <animation>
    <type>material</type>
    <object-name>base</object-name>
    <object-name>knob</object-name>
    <object-name>needle</object-name>
    <emission>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

<!-- Needles -->
<animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>consumables/fuel/tank[5]/level-kg</property> <!-- TODO -->

    <!--Fuel kg -->
    <interpolation>
      <entry><ind>    0</ind>	<dep>-170</dep></entry>
      <entry><ind> 8000</ind>	<dep> 170</dep></entry>
    </interpolation>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>
</PropertyList>