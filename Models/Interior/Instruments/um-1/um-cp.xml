<!-- UM-1 Mach indicator
3D instrument for Tu-134 -->
<PropertyList>
 <path>um-cp.ac</path>
<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>base</object-name>
  <object-name>needle</object-name>
    <emission>
      <factor-prop>Tu-134/instrument-lights</factor-prop>
      <red>   1.0 </red>
      <green> 0.5 </green>
      <blue>  0.5 </blue>
    </emission>
  </animation>

<!--Needle-->
<animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>velocities/mach</property>
    <interpolation>
      <entry><ind>	0.0</ind>	<dep>	-180.0</dep></entry>
      <entry><ind>	0.5</ind>	<dep>	-162.0</dep></entry>
      <entry><ind>	0.6</ind>	<dep>	-95.0</dep></entry>
      <entry><ind>	0.9</ind>	<dep>	85.0</dep></entry>
      <entry><ind>	0.95</ind>	<dep>	116.0</dep></entry>
      <entry><ind>	1.0</ind>	<dep>	158.0</dep></entry>
    </interpolation>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>


</PropertyList>
