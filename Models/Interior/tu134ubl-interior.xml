<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

  <path>tu134ubl-interior.ac</path>

  <animation>
    <!-- opaque objets -->
    <object-name>interior</object-name>
    <object-name>cockpitnose1</object-name>
    <object-name>floor</object-name>
    <object-name>spacers</object-name>
    <object-name>spacersnose</object-name>
    <object-name>intdoor</object-name>
    <object-name>spacersdoor</object-name>
    <object-name>cockpit</object-name>
    <object-name>panel1</object-name>
    <object-name>panel2</object-name>
    <object-name>panel3</object-name>
    
    <!-- transparent objects -->
    <object-name>intwindows</object-name>
    <object-name>intdoorwindow</object-name>
    <object-name>intnosewindows</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Tu-134-JSB/Models/Effects/Glass/glass</inherits-from>
    <object-name>intwindows</object-name>
    <object-name>intdoorwindow</object-name>
    <object-name>intnosewindows</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>interior</object-name>
    <object-name>floor</object-name>
    <object-name>spacers</object-name>
    <object-name>spacersnose</object-name>
    <object-name>intdoor</object-name>
    <object-name>spacersdoor</object-name>
    <object-name>cockpit</object-name>
    <object-name>Seats</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.5 </red>
      <green> 0.5 </green>
      <blue>  0.5 </blue>
    </emission>
  </animation>

  <!-- cockpit panels -->
  <model>
    <path>Aircraft/Tu-134-JSB/Models/Interior/tu134ubl-instruments.xml</path>
    <offsets>
      <x-m> -16.056 </x-m>
      <y-m>   0.000 </y-m>
      <z-m>  -0.872 </z-m>
    </offsets>
  </model>

<animation>
  <type>rotate</type>
  <object-name>yoke_l1</object-name>
  <property>controls/flight/aileron</property>
  <factor>50</factor>
  <center>
    <x-m>-16.056</x-m>
    <y-m>-0.564</y-m>
    <z-m>-0.845</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>yoke_l1</object-name>
  <object-name>yoke_l2</object-name>
  <property>controls/flight/elevator</property>
  <factor>6</factor>
  <center>
    <x-m>-15.681</x-m>
    <y-m>  0.0</y-m>
    <z-m> -1.522</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>yoke_r1</object-name>
  <property>controls/flight/aileron</property>
  <factor>50</factor>
  <center>
    <x-m>-16.056</x-m>
    <y-m> 0.564</y-m>
    <z-m>-0.845</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>yoke_r1</object-name>
  <object-name>yoke_r2</object-name>
  <property>controls/flight/elevator</property>
  <factor>6</factor>
  <center>
    <x-m>-15.681</x-m>
    <y-m>  0.0</y-m>
    <z-m> -1.522</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

  <!-- Door -->
  <animation>
    <name>IntLaPorte</name>
    <object-name>intdoor</object-name>
    <object-name>spacersdoor</object-name>
    <object-name>intdoorwindow</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>IntLaPorte</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntLaPorte</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep>  0 </dep></entry>
      <entry><ind> 0.2 </ind><dep>  0 </dep></entry>
      <entry><ind> 1.0 </ind><dep> 65 </dep></entry>
    </interpolation>
    <center>
      <x-m> -13.055 </x-m>
      <y-m>   0.000 </y-m>
      <z-m>  -1.188 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>IntLaPorte</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> 0.00 </dep></entry>
      <entry><ind> 0.2 </ind><dep> 0.08 </dep></entry>
      <entry><ind> 1.0 </ind><dep> 0.08 </dep></entry>
    </interpolation>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
