<!--************************************ EFFECTS **************************************-->
<gear>
  <name>gear up</name>
  <path>Aircraft/Tu-134-JSB/Sounds/misc/154_gearup_l.wav</path>
  <condition>
    <less-than>
      <property>gear/gear[1]/position-norm</property>
      <value>0.9</value>
    </less-than>
  </condition>
  <mode>once</mode>
  <position>
    <x>2</x>
    <y>0</y>
    <z>-2.5</z>
  </position>
</gear> 

<gear>
  <name>gear down</name>
  <path>Aircraft/Tu-134-JSB/Sounds/misc/154_geardown_l.wav</path>
  <condition>
    <greater-than>
      <property>gear/gear[1]/position-norm</property>
      <value>0.1</value>
    </greater-than>
  </condition>
  <mode>once</mode>
  <position>
    <x>2</x>
    <y>0</y>
    <z>-2.5</z>
  </position>
</gear> 

